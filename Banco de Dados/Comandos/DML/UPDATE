-- sql: dml-update

UPDATE funcionario
	set salario = 19000.00
		where cpf = "456.789.012-04";
        
SET SQL_SAFE_UPDATES = 0;
update funcionario
	set salario = salario * 1.1
    where genero = 'F';
    
update funcionario
	set cpf = "191.000.000-00"
    where cpf = "456.789.012-04";

update funcionario
	set salario = 500
    where salario <= 2000;